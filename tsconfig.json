{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@": ["./dist/index"],
      "@/safe": ["./dist/safe"],
      "@/unsafe": ["./dist/unsafe"],
      "@/safe/*": ["./src/safe/*"],
      "@/unsafe/*": ["./src/unsafe/*"],
      "@/shared/*": ["./src/shared/*"]
    },
    "strict": true,
    "lib": ["esnext"],
    "outDir": "./dist",
    "module": "esnext",
    "target": "esnext",
    "declaration": true,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "isolatedModules": false,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true
  },
  "exclude": ["node_modules"]
}
